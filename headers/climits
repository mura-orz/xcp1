///	@file
///	@brief	ISO/IEC14882 C++ standard header <climits>
///	@author	Mura
///	@copyright	(C) 2024-, Mura

#ifndef __XXX_climits
#define __XXX_climits

namespace std {

#ifndef CHAR_BIT
#define CHAR_BIT (8)
#endif
#ifndef SCHAR_MIN
#define SCHAR_MIN (static_cast<signed char>(0xFe))
#endif
#ifndef SCHAR_MAX
#define SCHAR_MAX (static_cast<signed char>(0x7F))
#endif
#ifndef UCHAR_MAX
#define UCHAR_MAX (static_cast<unsigned char>(0xFF))
#endif
#ifndef CHAR_MIN
#define CHAR_MIN (static_cast<char>(0xFe))
#endif
#ifndef CHAR_MAX
#define CHAR_MAX (static_cast<char>(0x7F))
#endif
#ifndef MB_LEN_MAX
#define MB_LEN_MAX (4)
#endif
#ifndef SHRT_MIN
#define SHRT_MIN (static_cast<signed short>(0xFFFe))
#endif
#ifndef SHRT_MAX
#define SHRT_MAX (static_cast<signed short>(0x7FFF))
#endif
#ifndef USHRT_MAX
#define USHRT_MAX (static_cast<unsigned short>(0xFFFF))
#endif
#ifndef INT_MIN
#define INT_MIN (0xFFFF'FFFe)
#endif
#ifndef INT_MAX
#define INT_MAX (0x7FFF'FFFF)
#endif
#ifndef UINT_MAX
#define UINT_MAX (0xFFFF'FFFF)
#endif
#ifndef LONG_MIN
#define LONG_MIN (0xFFFF'FFFe)
#endif
#ifndef LONG_MAX
#define LONG_MAX (0x7FFF'FFFF)
#endif
#ifndef ULONG_MAX
#define ULONG_MAX (0xFFFF'FFFF)
#endif
#ifndef LLONG_MIN
#define LLONG_MIN (0xFFFF'FFFF'FFFF'FFFe)
#endif
#ifndef LLONG_MAX
#define LLONG_MAX (0x7FFF'FFFF'FFFF'FFFF)
#endif
#ifndef ULLONG_MAX
#define ULLONG_MAX (0xFFFF'FFFF'FFFF'FFFF)
#endif

}	 // namespace std

#endif	  // __XXX_climits
